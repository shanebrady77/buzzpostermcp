# Database Configuration
# PostgreSQL connection string (Railway will auto-provide this)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# NewsAPI Configuration
# Get your key from: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stripe Price IDs
# Create products and prices in Stripe dashboard
STRIPE_PRO_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_BUSINESS_PRICE_ID=price_xxxxxxxxxxxxx

# Late.dev OAuth Configuration
# Register OAuth app at: https://app.getlate.dev/settings/developers
LATE_CLIENT_ID=your_late_client_id
LATE_CLIENT_SECRET=your_late_client_secret

# Server Configuration
# Your production domain (e.g., https://mcp.buzzposter.com)
BASE_URL=https://your-domain.com

# Server Secret Key
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SERVER_SECRET_KEY=your_random_secret_key_here

# Cloudflare R2 Configuration (for media uploads)
# Create R2 bucket at: https://dash.cloudflare.com
# Generate API tokens in Cloudflare dashboard
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=buzzposter-media
R2_PUBLIC_URL=https://media.buzzposter.com
